<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/_18sdp"
    app:cardElevation="10dp"
    android:id="@+id/bookingCardView"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <!--                <ImageView-->
            <!--                    android:id="@+id/imageView_complete"-->
            <!--                    android:layout_width="37dp"-->
            <!--                    android:layout_height="match_parent"-->
            <!--                    android:layout_gravity="center_vertical"-->

            <!--                    android:padding="@dimen/_5sdp"-->
            <!--                    android:src="@drawable/history"-->
            <!--                    android:text="Username"-->
            <!--                    android:textSize="15dp" />-->

            <!--                <View-->
            <!--                    android:layout_width="0dp"-->
            <!--                    android:layout_height="0dp"-->
            <!--                    android:layout_weight="1"/>-->

            <TextView
                android:ellipsize="marquee"
                android:id="@+id/ParkingAreaName"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:layout_width="wrap_content"
                android:padding="@dimen/_2sdp"
                android:text="Parking Area Name"
                android:textSize="18dp" />

            <TextView
                android:background="#D8B60C"
                android:ellipsize="marquee"
                android:id="@+id/ParkingStatus"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:padding="5dp"
                android:text="Booked"
                android:textSize="15dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/ParkingArea"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Unique ID: "
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/_14sdp"></TextView>

        <View
            android:background="@android:color/darker_gray"
            android:layout_height="2dp"
            android:layout_width="match_parent" />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Booking Time :"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp" />

            <View
                android:id="@+id/total_time"
                android:layout_gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="02:00pm"
                android:textSize="15dp" />

            <TextView
                style="@style/TextAppearance.Material3.BodyLarge"
                android:id="@+id/textview_time_remaining"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="01hr : 30min"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Check In Time :"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp" />

            <View
                android:id="@+id/total_time1"
                android:layout_gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="02:00pm"
                android:textSize="15dp" />

            <TextView
                style="@style/TextAppearance.Material3.BodyLarge"
                android:id="@+id/textview_time_checkIn"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="01hr : 30min"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="Check Out Time :"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp" />

            <View
                android:id="@+id/total_time2"
                android:layout_gravity="center_vertical"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="02:00pm"
                android:textSize="15dp" />

            <TextView
                style="@style/TextAppearance.Material3.BodyLarge"
                android:id="@+id/textview_time_checkOut"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="01hr : 30min"
                android:textColor="@android:color/darker_gray"
                android:textSize="15dp"
                android:textStyle="bold" />


        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>

